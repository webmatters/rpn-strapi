{
  "kind": "collectionType",
  "collectionName": "customers",
  "info": {
    "name": "Customer"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "email": {
      "type": "email",
      "unique": true,
      "required": true
    },
    "password": {
      "type": "password",
      "required": true
    },
    "phone": {
      "type": "biginteger",
      "required": true,
      "unique": true
    },
    "stripe_id": {
      "type": "string",
      "required": false,
      "unique": true
    },
    "bookings": {
      "via": "customer",
      "collection": "booking"
    }
  }
}
